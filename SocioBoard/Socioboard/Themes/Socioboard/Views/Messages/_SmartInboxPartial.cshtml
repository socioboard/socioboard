          string onClick = "";
          string network = "";
          if (row["Network"].ToString() == "twitter")
          {
              icon = "twticon.png";
              onClick = "detailsdiscoverytwitter";
              network = "twitter";
          }
          else if (row["Network"].ToString() == "facebook")
          {
              icon = "fb_icon.png";
              onClick = "getFacebookProfiles";
              network = "facebook";
          }
              if(!string.IsNullOrEmpty(row["FromProfileUrl"].ToString()))
               {
                    imageurl=row["FromProfileUrl"].ToString();
               }else{
                    imageurl="../Themes/Socioboard/Contents/img/anonymousUser.jpg";
               }                             
    <div class="panel panel-primary" id="messagetaskable_@sorteddatacount">
        <div class="panel-heading">
            <div class="row" style="width:750px;">
                <div class="col-xs-3">
                    <img @*src="~/Themes/@System.Configuration.ConfigurationManager.AppSettings["domain"]/Contents/img/@icon"*@ title="@row["FromName"]" alt="@row["FromId"]" src="@imageurl" id="formprofileurl_@sorteddatacount" onclick=""@onClick"(this.alt)" class="img-circle" data-toggle="modal" data-target="#profileModal">
                    <img class="img-responsive img-circle" src="~/Themes/@System.Configuration.ConfigurationManager.AppSettings["domain"]/Contents/img/@icon" style="margin-left: 35px; margin-top: -20px;">
                    <span id="screanName_@sorteddatacount">@row["FromName"]</span>
                    <span style="float: left">@row["MessageDate"]</span>


                </div>
            </div>
        </div>
        <div class="panel-body">
