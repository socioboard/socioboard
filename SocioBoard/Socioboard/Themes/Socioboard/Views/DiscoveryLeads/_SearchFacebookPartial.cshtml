@{
    bool check = true;
}
@model IEnumerable<Socioboard.Model.FbGroupPost>
@foreach (var item in Model)
{
    if (check == true)
    {
    <li class="left clearfix">
        <span class="chat-img pull-left">
            <img src="@item.ProfileImage" class="img-circle profilePic" alt="User Avatar">
        </span>
        <div class="chat-body clearfix">
            <div>
                <strong class="primary-font"><a href="#" target="_blank">@item.ProfileName</a></strong>
                <small class="pull-right text-muted">
                    <i class="fa fa-clock-o fa-fw"></i>@item.DateTimeOfPost
                                            </small>
            </div>
            <p>
                <a href="@item.PostRedirectionImg" target="_blank">@item.Message</a>
                                       
            </p>
        </div>
    </li>
        check = false;
    }
    else
    {
    <li class="right clearfix">
        <span class="chat-img pull-right">
            <img src="@item.ProfileImage" class="img-circle profilePic" alt="User Avatar">
        </span>
        <div class="chat-body clearfix">
            <div>
                <strong class="primary-font"><a href="#" target="_blank">@item.ProfileName</a></strong>
                <small class="pull-left text-muted">
                    <i class="fa fa-clock-o fa-fw"></i>@item.DateTimeOfPost
                                            </small>
            </div><br />
            <p class="pull-right">
                <a href="@item.PostRedirectionImg" target="_blank">@item.Message</a>
                                       
            </p>
        </div>
    </li>
        check = true;
    }
}