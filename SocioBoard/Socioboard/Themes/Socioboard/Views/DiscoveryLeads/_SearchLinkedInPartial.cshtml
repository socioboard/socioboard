@{
    bool check = true;
}
@model IEnumerable<Socioboard.Model.LIGroupPostDetails>
@foreach (var item in Model)
{
    if (check == true)
    {
    <li class="left clearfix">
        <span class="chat-img pull-left">
            <img src="@item.ProfilePicUrl" class="img-circle profilePic" alt="User Avatar">
        </span>
        <div class="chat-body clearfix">
            <div>
                <strong class="primary-font"><a href="https://www.linkedin.com/profile/view?id=@item.UserId" target="_blank">@item.ProfileName</a></strong>
                <small class="pull-right text-muted">
                    <i class="fa fa-clock-o fa-fw"></i>@Socioboard.Helper.DateExtension.ToDateTime(DateTime.Now, (long)Convert.ToDouble(item.EntryDate))
                                            </small>
            </div>
            <p>
                <a href="@item.PostUrl" target="_blank">@item.PostBody</a>
                                       
            </p>
        </div>
    </li>
        check = false;
    }
    else
    {
    <li class="right clearfix">
        <span class="chat-img pull-right">
            <img src="@item.ProfilePicUrl" class="img-circle profilePic" alt="User Avatar">
        </span>
        <div class="chat-body clearfix">
            <div>
                <strong class="primary-font pull-right"><a href="https://www.linkedin.com/profile/view?id=@item.UserId" target="_blank">@item.ProfileName</a></strong>
                <small class="pull-left text-muted">
                    <i class="fa fa-clock-o fa-fw"></i>@Socioboard.Helper.DateExtension.ToDateTime(DateTime.Now, (long)Convert.ToDouble(item.EntryDate))
                                            </small>
            </div><br />
            <p class="pull-right">
                <a href="@item.PostUrl" target="_blank">@item.PostBody</a>
                                       
            </p>
        </div>
    </li>
        check = true;
    }
}