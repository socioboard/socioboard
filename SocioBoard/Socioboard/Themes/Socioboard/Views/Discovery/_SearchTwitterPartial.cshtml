@using Socioboard.Helper;
@using Domain.Socioboard.Helper;
@{
    bool check = true;
  
 List<Domain.Socioboard.Domain.DiscoverySearch> lstfeed = (List<Domain.Socioboard.Domain.DiscoverySearch>)Model;
}
@if (lstfeed.Count > 0)
{
foreach (var item in (List<Domain.Socioboard.Domain.DiscoverySearch>)Model)
{
    if (check == true)
    {
    <li class="left clearfix">
        <span class="chat-img pull-left">
            <img src="@item.ProfileImageUrl" class="img-circle profilePic" alt="User Avatar">
        </span>
        <div class="chat-body clearfix">
            <div>
                <strong class="primary-font"><a href="http://twitter.com/@item.FromName" target="_blank">@item.FromName</a></strong>
                <small class="pull-right text-muted">
                    <i class="fa fa-clock-o fa-fw"></i>@DateExtension.CalculateTimeDiff(item.CreatedTime);
                                            </small>
            </div>
            <p class="chat-tags">
                <a href="http://twitter.com/@item.FromName/status/@item.MessageId" target="_blank">@item.Message</a>

            </p>
        </div>
    </li>
        check = false;
    }
    else
    {
    <li class="right clearfix">
        <span class="chat-img pull-right">
            <img src="@item.ProfileImageUrl" class="img-circle profilePic" alt="User Avatar">
        </span>
        <div class="chat-body clearfix">
            <div>
                <strong class="primary-font pull-right"><a href="http://twitter.com/@item.FromName" target="_blank">@item.FromName</a></strong>
                <small class="pull-left text-muted">
                    <i class="fa fa-clock-o fa-fw"></i>@DateExtension.CalculateTimeDiff(item.CreatedTime);
                                            </small>
            </div><br />
            <p class="pull-right chat-tags">
                <a href="http://twitter.com/@item.FromName/status/@item.MessageId" target="_blank">@item.Message</a>

            </p>
        </div>
    </li>
        check = true;
    }
}}
else {
<div class="panel-body">
    <ul id="twitterdiscovery" class="chat">
        No Result Found,Try With Another Keywords
    </ul>
    <div>
    </div>
</div>

}

<style>
    .chat-tags a {
        word-wrap: break-word;
    }
</style>